@import '../../../common.styl'

.screenWrapper
  display flex
  width: 100%
  padding 28px
  flex-direction column
  gap 50px

.container
  display: flex
  gap: 20px
  align-items: center

.back
  display: flex
  width: 48px
  cursor: pointer
  background-color: white
  border-radius: 10px
  box-shadow 2px 2px 8px rgba(214, 211, 211, 0.541) 

.screen
  background white
  display flex
  gap 20px
  justify-content space-evenly
  padding 24px
  border-radius 10px
  align-items: center
  max-height: 64px
  box-shadow 2px 2px 8px rgba(214, 211, 211, 0.541) 
  coolScrollbar()


.items
  display flex
  flex-direction column
  gap 24px;

.item
  display flex
  justify-content space-between
  background-color white
  padding 20px
  align-items center 
  border-radius 10px 
  box-shadow 2px 2px 8px rgba(214, 211, 211, 0.541) 

.offer
    display block

