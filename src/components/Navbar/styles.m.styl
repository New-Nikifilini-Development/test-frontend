@import '../../common.styl'

.navbar
    height 100%
    width 84px
    background white
    // padding-top 84px

.logo
    height 84px
    width 84px
    color $primary
    display flex
    justify-content center
    align-items center

.element
    width 100%
    height 64px
    position relative
    display flex
    align-items center
    justify-content center

    .iconWrapper
        width 48px
        height 48px
        display flex
        align-items center
        justify-content center
        border-radius 4px
        cursor pointer
        transition background .2s

        &:hover
            background alpha($primary, 5%)

        svg
            fill $primary-grey
            height 28px

    &.active
        .iconWrapper
            background alpha($primary, 10%)

            svg
                fill $primary
        &::after
            content ' '
            height 48px
            width 2px
            background $primary
            position absolute
            right 0
            top calc((100% - 48px) / 2)
            border-radius 1px